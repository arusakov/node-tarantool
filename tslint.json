{
    "extends": "tslint:latest",
    "rules": {
        "no-console": [
            false
        ],
        "member-access": [
            false
        ],
        "typedef":[
            true,
            "arrow-parameter",
            "parameter"
        ],
        "no-unused-variable": [
            false
        ],
        "interface-name": [
            false
        ],
        "object-literal-sort-keys": false,
        "quotemark": [
            true, "single"
        ],
        "interface-over-type-literal": false,
        "semicolon": [
            true, "never"
        ],
        "trailing-comma": [
            true, {
               "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "never"
                },
                "singleline": "never"
            }
        ]
    }
}