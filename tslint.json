{
    "extends": "tslint:latest",
    "rules": {
        "no-console": [
            false
        ],
        "member-access": [
            false
        ],
        "typedef":[
            false
        ],
        "no-unused-variable": [
            false
        ],
        "max-classes-per-file": false,
        "interface-name": [
            false
        ],
        "object-literal-sort-keys": false,
        "quotemark": [
            true, "single"
        ],
        "interface-over-type-literal": false,
        "semicolon": [
            true, "never"
        ],
        "trailing-comma": [
            true, {
               "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "always",
                    "typeLiterals": "always"
                },
                "singleline": "never"
            }
        ],
        "variable-name": [
            "check-format",
            "allow-leading-underscore",
            "ban-keywords"
        ]
    }
}