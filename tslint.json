{
    "extends": "tslint:latest",
    "rules": {
        "interface-name": false,
        "interface-over-type-literal": false,
        "max-classes-per-file": false,
        "no-console": false,
        "quotemark": [true, "single"],
        "semicolon": false,
        "trailing-comma": [true, {
            "multiline": {
                "objects": "always",
                "arrays": "always",
                "functions": "always",
                "typeLiterals": "never"
            }
        }],
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"]
    }
}