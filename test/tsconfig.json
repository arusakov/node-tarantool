{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "inlineSourceMap": true,
        "target": "es2015"
    },
    "include": [
         "../typings/globals/node/**/*",
         "../typings/globals/msgpack-lite/**/*",
         "../typings/globals/mocha/**/*",
        "./**/*"
    ]
}